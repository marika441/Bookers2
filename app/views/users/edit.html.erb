<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>

  <div id="error_explanation">
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>errors prohibited this obj being saved:</h3>
        
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      <% end %>
  </div>

<%= form_with model:@user, local:true do |f| %>

  <p>Name</p>
  <%= f.text_field :name %>
  <p>Image</p>
  <%= f.attachment_field :profile_image %>
  <p>Introduction</p>
  <%= f.text_area :introduction %>
  <div class="form-group">
  <input type="submit" name="commit" value="Update User" class="btn btn-secondary mt-2" data-disable-win="Update User">
  </div>
  
<% end %>
    </div>
  </div>
</div>