<div class="container">
  
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
      <%= form_with model:@book, local: true do |f| %>
      
      <div id="error_explanation">
        <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj being saved:</h3>
        
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        <% end %>
      </div>
      
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
        <div class="form-group">
        <input type="submit" name="commit" value="Update Book" class="btn btn-success mt-2" data-disable-win="Update Book">
        </div>
  
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>